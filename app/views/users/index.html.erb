<%= link_to "New",new_user_path %><br/>
<hr><hr>
<div class="container">
  <table class="table table-striped">
   <tr>
    <th>Name:</th>
    <th>Mobile</th>
    <th>Address:</th>
    <th>image</th>
   </tr>
 <% @user.each do |user|%>
   <tr>
     <td><%= user.name%></td>
     <td><%= user.mobile%></td>
     <td><%= user.address%></td>
     <td><%= image_tag user.image.photo(:thumb) unless user.image.blank?%> </td>
     <td><%= link_to "delete information",user,:data=>{:confirm=>"Are you sure?"},:method=> :delete,:class=>"sucess"%></td>
    <% if can? :update, user%>
    <td><%= link_to "edit",edit_user_path(user)%></td>
    <td><%= link_to "show",user_path(user) , :class=>"sucess"%></td>
   </tr>
   <%end%>  
   <%end%>
  </table>
  <%= link_to "Add New User", new_user_path%>
</div>