<%= form_for @user do |f|%>
<% if @user.errors.any? %>
  <% @user.errors.messages.each do |key,msg |%>
    <ul>
    <li><%= "#{key} : " + msg.first%></li>
    </ul>
  <%end%>
<%end%>
<table>
  <tr>
  <td><%= f.label :name%></td>
  <td><%= f.text_field :name%></td>
  </tr>
  <tr>
  <td><%= f.label :mail%></td>
  <td><%= f.email_field :mail%></td>
  </tr>
  <tr>
  <td><%= f.label :password%></td>
  <td><%= f.password_field :password%></td>
  </tr>
  <tr>
  <td><%= f.label :confirm_password%></td>
  <td><%= f.password_field :confirm_password%></td>
  </tr>
  <tr>
  <td><%= f.label :mobile%></td>
  <td><%= f.text_field :mobile%></td>
  </tr>
  <tr>
  <td><%= f.label :address%></td>
  <td><%= f.text_field :address%></td>
  </tr>
  <%= f.fields_for :image do | image | %>
    <tr>
      <td><%= image.label :photo%></td>
      <td><%= image.file_field :photo%></td>
    </tr>
  <%end%>
  <tr>
     <td><%= f.submit "Save"%></td>
  </tr>
</table>
<%end%>
